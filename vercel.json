{
    "version": 2,
    "builds": [
      {
        "src": "package.json",
        "use": "@vercel/next"
      }
    ],
    "routes": [
      { "src": "/(.*)", "dest": "/" }
    ],
    "env": {
      "NEXT_PUBLIC_API_URL": "https://my-backend-xi5n.onrender.com",
      "NEXT_PUBLIC_USE_POLLING": "true",
      "NEXT_PUBLIC_POLLING_INTERVAL": "5000",
      "NEXT_PUBLIC_SENTRY_DSN": "@sentry_dsn"
    }
  }